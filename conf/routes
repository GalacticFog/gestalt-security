# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET        /orgs/current            controllers.RESTAPIController.getCurrentOrg
#GET        /orgs/:orgId                  controllers.SecurityController.getOrgById(orgId)
#GET        /orgs/:orgId/groups           controllers.SecurityController.listOrgGroups(orgId)
#GET        /orgs/:orgId/directories      controllers.SecurityController.listOrgDirectories(orgId)
POST       /orgs/:orgId/apps        controllers.RESTAPIController.createOrgApp(orgId)
GET        /orgs/:orgId/apps        controllers.RESTAPIController.listOrgApps(orgId)

GET        /apps/:appId             controllers.RESTAPIController.getAppById(appId)
POST       /apps/:appId/auth        controllers.RESTAPIController.appAuth(appId)


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file            controllers.Assets.at(path="/public", file)
